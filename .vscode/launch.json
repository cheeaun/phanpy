	"version": "0.2.0",
	"configurations": [
		{
			"name": "Dev (Chrome)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script",
				"dev"
			],
			"skipFiles": [
				"<node_internals>/**"
			],
			"serverReadyAction": {
				"pattern": "  âžœ  Local:   (http://.+/)",
				"uriFormat": "%s",
				"action": "debugWithChrome",
				"killOnServerStop": true
			}
		},
	]
}